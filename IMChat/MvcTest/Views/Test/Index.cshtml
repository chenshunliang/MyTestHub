@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <input type="button" value="web service" onclick="Add();" />
    </div>
</body>
</html>
<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script type="text/javascript">
    function Add() {
        try {
            $.ajax({
                type: "POST",  //访问WebService使用post方式请求
                contentType: "application/json;utf-8",   //WebService会返回json类型
                url: "http://localhost:4322/test.asmx?op=Add", //调用WebService的地址和方法名称组合
                data: "{a:2,b:2.2}",  //这里是要传递的参数，格式为data:"{paraName:paraValue}"
                dataType: "json",
                success: function (result) {
                    alert(result.d);
                }
            })
        }
        catch (ex) {
            alert(ex);
        }
    }
</script>
